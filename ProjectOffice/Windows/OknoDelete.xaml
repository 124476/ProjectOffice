<Window x:Class="ProjectOffice.Windows.OknoDelete"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectOffice.Windows"
        mc:Ignorable="d"
        Title="OknoDelete" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
            <TextBlock FontSize="21" Text="Удалить?"></TextBlock>
            <Button x:Name="YesBtn" FontSize="17" Content="Да" Click="YesBtn_Click"></Button>
            <Button x:Name="NoBtn" FontSize="17" Content="Нет" Click="NoBtn_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
